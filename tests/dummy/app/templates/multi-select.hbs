<style>
  * {
    box-sizing: border-box;
  }
  body {
    width: 600px;
    margin: auto;
    margin-top: 50px;
    color: #999;
    font-family: sans-serif;
  }
  lio-multi-select {
    display: block;
    height: 200px;
  }
  lio-option {
    display: block;
    padding: 5px 40px;
    color: #777;
    cursor: pointer;
  }
  lio-option:hover {
    background-color: #dbe3f0;
  }
  .native-input {
    padding: 10px 0;
    border: 2px solid #aaa;
    border-radius: 4px;
    overflow-y: auto;
  }
  .native-input lio-option.selected {
    background-color: #bfc8d7;
  }
  .native-input lio-option.selected:hover {
    background-color: #dbe3f0;
  }
  .side-by-side {
    position: relative;
    border: 2px solid #aaa;
    border-radius: 4px;
  }
  .side-by-side lio-filter {
    display: table;
    width: 100%;
    border-collapse: separate;
    border-bottom: 2px solid #aaa;
  }
  .side-by-side lio-filter input {
    display: table-cell;
    width: 100%;
    height: 30px;
    padding: 4px 8px;
    font-size: 16px;
    border: none;
    border-radius: 4px;
    color: #777;
    vertical-align: middle;
  }
  .side-by-side lio-filter lio-button {
    display: table-cell;
    width: 1%;
    padding: 6px 12px;
    cursor: pointer;
  }
  .side-by-side lio-filter lio-button:before {
    content: "×";
  }
  .side-by-side .unselected-options,
  .side-by-side .selected-options {
    position: absolute;
    top: 32px;
    bottom: 0;
    width: 50%;
    padding: 10px 0;
    border-radius: 0;
    overflow-y: auto;
  }
  .side-by-side .unselected-options {
    left: 0;
    border-right: 2px solid #aaa;
  }
  .side-by-side .selected-options {
    right: 0;
  }
  .side-by-side .unselected-options lio-option.selected,
  .side-by-side .selected-options lio-option:not(.selected),
  .side-by-side .unselected-options lio-option.filtered {
    display: none;
  }
  .side-by-side .actions {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  .side-by-side .actions lio-button {
    display: block;
    margin-bottom: 10px;
    padding: 5px;
    border: 2px solid #aaa;
    border-radius: 4px;
    background-color: #fff;
    cursor: pointer;
    font-size: 24px;
    line-height: 24px;
    font-family: monospace;
  }
  .side-by-side .actions lio-button.disabled {
    color: #ccc;
    border-color: #ccc;
  }
  .side-by-side lio-button[action="select-all"]:before {
    content: "⇨";
  }
  .side-by-side lio-button[action="unselect-all"]:before {
    content: "⇦";
  }
</style>

{{#lio-multi-select values=values class="native-input"}}
  {{#each option in model}}
    {{#lio-option value=option.value}}{{capitalize option.label}}{{/lio-option}}
  {{/each}}
{{/lio-multi-select}}

<br/>

{{#lio-multi-select values=values optionValuePath="value" class="side-by-side"}}
  {{#lio-filter}}
    {{lio-text-field placeholder="search..."}}
    {{lio-button action="clear"}}
  {{/lio-filter}}

  <div class="unselected-options">
    {{#each option in model}}
      {{#lio-option option=option}}{{capitalize option.label}}{{/lio-option}}
    {{/each}}
  </div>

  <div class="selected-options">
    {{#each option in model}}
      {{#lio-option option=option unselect=true}}{{capitalize option.label}}{{/lio-option}}
    {{/each}}
  </div>

  <span class="actions">
    {{lio-button action="select-all"}}
    {{lio-button action="unselect-all"}}
  </span>
{{/lio-multi-select}}

<h4>Selected Values:</h4>
{{#if values}}
  <ul>
    {{#each value in values}}
      <li>{{value}}</li>
    {{/each}}
  </ul>
{{else}}
  <em>none</em>
{{/if}}
