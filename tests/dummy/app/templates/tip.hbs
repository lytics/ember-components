  }
  cite {
    border-bottom: 1px dotted #999;
    cursor: pointer;
    color: #000;
  }
  lio-popover .arrow {
    border-width: 5px;
    border-style: solid;
    border-color: transparent;
    width: 0;
    height: 0;
    position:absolute;
    top: 0;
    left: 0;
  }
  lio-popover.left .arrow {
    margin-left: -1px;
    border-left-color: #000;
  }
  lio-popover.right .arrow {
    border-right-color: #000;
  }
  lio-popover.top .arrow {
    margin-top: -2px;
    border-top-color: #000;
  }
  lio-popover.bottom .arrow {
    border-bottom-color: #000;
  }
  .box {
    position: relative;
    border: 1px dotted #333;
    height: 400px;
    margin: 2em;
  }
  .inner-box {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
  }
  .stamp lio-label {
    color: white;
    background: #666;
    padding: 15px;
    text-transform: uppercase;
    position: absolute;
    top: 10px;
    right: 10px;
  }
  .stamp lio-popover {
    white-space: nowrap;
  }
</style>

